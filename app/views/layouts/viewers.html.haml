!!!
%html
  %head
    %title GoalaraCom
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    = stylesheet_link_tag 'style.css', :media => 'screen, projection'
    = stylesheet_link_tag 'toolbar.css', :media => 'screen, projection'
    /[if lt IE 8]
      <haml:loud> stylesheet_link_tag 'ie.css', :media =&gt; 'screen, projection' </haml:loud>
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.tinyscrollbar.min.js'
    = javascript_include_tag 'viewer.js'  
    = csrf_meta_tag
  %body#pagetype
    = yield

        