%h1 Listing teams
%table
  %tr
    %th Name
    %th Logo image
    %th
    %th
    %th
  - @teams.each do |team|
    %tr
      %td= translate(team.name)
      %td= image_tag(team.logo_image, :class => 'list_image')
      %td= link_to 'Show', team
      %td= link_to 'Edit', edit_team_path(team)
      %td= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete
